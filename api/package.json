{
  "name": "ct-api",
  "version": "1.0.0",
  "description": "REST API for Cybertown Revival",
  "main": "api.ts",
  "scripts": {
    "build": "tsc",
    "build:prod": "tsc --project tsconfig.prod.json",
    "db:init": "ts-node -r dotenv/config db/scripts/create-db.ts && npm run db:migrate && npm run db:seed",
    "db:migrate": "knex migrate:latest --knexfile src/knexfile.ts",
    "db:rollback": "knex migrate:rollback --knexfile src/knexfile.ts",
    "db:seed": "knex seed:run --knexfile src/knexfile.ts",
    "test": "jest",
    "dev": "nodemon -e ts --exec \"node --inspect=0.0.0.0:9229 -r ts-node/register -r dotenv/config src/api.ts\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.0.0",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.2",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.189",
    "@types/morgan": "^1.9.3",
    "@types/mysql": "^2.15.21",
    "@types/node": "^17.0.21",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "jest": "^29.3.1",
    "jest-createspyobj": "^2.0.0",
    "nodemon": "^2.0.14",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  }
}
